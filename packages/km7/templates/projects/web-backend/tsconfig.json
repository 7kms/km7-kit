{
  "compilerOptions": {
    "lib": ["ES5", "ES6", "ESNext", "DOM", "DOM.Iterable"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "config/**/*", ".umirc.ts", "typings/**/*", "app/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
