{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings", "node_modules/@types"]
  },
  "include": ["packages", "typings"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "lib",
    "fixtures",
    "examples",
    "packages/km7/templaes/**/*"
  ]
}
